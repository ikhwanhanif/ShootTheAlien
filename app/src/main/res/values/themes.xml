<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShootTheAlien" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Mengatur status bar menjadi transparan -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Mengatur jendela untuk menggambar latar belakang sistem bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Mengatur status bar menjadi translusen -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="buttonStyle">@null</item>
    </style>

    <style name="Theme.SpaceShooter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Fullscreen AlertDialog with rounded corners -->
    <style name="RoundedCornersAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/rounded_corner_dialog_background</item>
    </style>

    <style name="Theme.ShootTheAlien" parent="Base.Theme.ShootTheAlien" />
</resources>